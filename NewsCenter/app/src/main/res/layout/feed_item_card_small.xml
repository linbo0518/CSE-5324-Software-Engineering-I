<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_feed_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@android:color/white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="6dp"
        card_view:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_huge"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small">

                <TextView
                    android:id="@+id/text_view_feed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_min"
                    android:layout_marginRight="@dimen/margin_min"
                    android:text="@string/feed_title"
                    android:textSize="@dimen/text_size_avg" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_small" />

                <TextView
                    android:id="@+id/text_view_feed_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_min"
                    android:layout_marginRight="@dimen/margin_min"
                    android:text="@string/source"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>